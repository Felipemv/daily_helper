<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_wl_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:text="Morning"
                        android:textSize="20sp"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:text="Afternoon"
                        android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_in"
                                android:tint="@color/colorIn"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_first_in"
                                android:text="Morning in"/>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_out"
                                android:tint="@color/colorOut"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_first_out"
                                android:text="Morning out"/>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_lunch"
                                android:tint="@color/colorLunch"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_lunch"
                                android:text="Lunch"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_in"
                                android:tint="@color/colorIn"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_second_in"
                                android:text="Afternoon in"/>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_out"
                                android:tint="@color/colorOut"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_second_out"
                                android:text="Afternoon out"/>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/RecyclerViewItemLayout">

                        <ImageView
                                style="@style/RecyclerViewItemImage"
                                android:src="@drawable/ic_total"
                                android:tint="@color/colorTotal"/>

                        <TextView
                                style="@style/RecyclerViewItemText"
                                android:id="@+id/tv_wl_total"
                                android:text="Total"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorPrimary"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="8dp">

                <LinearLayout
                        android:id="@+id/ll_wl_edit"
                        style="@style/RecyclerViewLinkLayout">

                    <TextView
                            style="@style/RecyclerViewLinkText"
                            android:text="Edit"/>

                    <ImageView
                            style="@style/RecyclerViewLinkImage"
                            android:src="@drawable/ic_edit"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_wl_finish"
                        style="@style/RecyclerViewLinkLayout">

                    <TextView
                            style="@style/RecyclerViewLinkText"
                            android:text="Done"/>

                    <ImageView
                            style="@style/RecyclerViewLinkImage"
                            android:src="@drawable/ic_finish"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>